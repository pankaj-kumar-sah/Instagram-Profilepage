<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ht_90"
    android:layout_height="@dimen/ht_100"
    android:layout_marginLeft="@dimen/pad_5"
    android:layout_marginRight="@dimen/pad_5"
    android:layout_marginBottom="@dimen/pad_5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ht_65"
            android:scaleType="centerCrop"
            android:src="@drawable/panku" />

        <TextView
            android:id="@+id/textview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_image"
            android:layout_marginTop="@dimen/pad_5"
            android:gravity="center"
            android:textSize="@dimen/txt_16" />


    </RelativeLayout>

</RelativeLayout>