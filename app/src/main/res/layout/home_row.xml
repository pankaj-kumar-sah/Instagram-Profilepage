<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_5"
    android:layout_marginBottom="@dimen/mrgn_15">


        <RelativeLayout
            android:id="@+id/relative_layout1"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/testImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ht_600"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"

                android:src="@drawable/panku" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout1">

            <ImageView
                android:id="@+id/testImage2"
                android:layout_width="@dimen/ht_30"
                android:layout_height="@dimen/ht_30"
                android:layout_marginTop="@dimen/mrgn_10"
                android:layout_marginLeft="@dimen/mrgn_10"
                android:src="@drawable/ic_baseline_favorite_24"/>

            <ImageView
                android:id="@+id/testImage3"
                android:layout_width="@dimen/ht_30"
                android:layout_height="@dimen/ht_30"
                android:layout_marginTop="@dimen/mrgn_10"
                android:layout_marginLeft="@dimen/ht_30"
                android:padding="@dimen/pad_2"
                android:layout_toRightOf="@id/testImage2"
                android:src="@drawable/ic_message"/>

            <ImageView
                android:id="@+id/testImage4"
                android:layout_width="@dimen/ht_30"
                android:layout_height="@dimen/ht_30"
                android:layout_marginTop="@dimen/mrgn_10"
                android:layout_marginLeft="@dimen/ht_30"
                android:layout_toRightOf="@id/testImage3"
                android:src="@drawable/ic_send_msg"/>

            <ImageView
                android:id="@+id/testImage5"
                android:layout_width="@dimen/ht_30"
                android:layout_height="@dimen/ht_30"
                android:layout_marginTop="@dimen/mrgn_10"
                android:layout_marginRight="@dimen/mrgn_10"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_save"/>

            <TextView
                android:id="@+id/testText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/testImage2"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/mrgn_15"
                android:layout_marginLeft="@dimen/mrgn_10"
                />
        </RelativeLayout>

</RelativeLayout>